<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context="com.example.pranav.karaoke.createSessionActivity">

    <TextView
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/now_select_a_theme_bitch"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:layout_above="@+id/themeSpinner"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="58dp" />

    <Spinner
        android:id="@+id/themeSpinner"
        android:layout_width="300dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/sessionFab"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/colorPrimary"
        app:rippleColor="@color/white"
        android:src="@drawable/ic_arrow_forward_white_24dp"
        android:layout_below="@+id/themeSpinner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp" />

</RelativeLayout>
