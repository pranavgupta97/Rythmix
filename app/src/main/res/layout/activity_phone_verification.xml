<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:padding="0dp"
    tools:context="com.example.pranav.karaoke.phoneVerificationActivity">
	

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@mipmap/mics"
        android:alpha="0.4"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


    <EditText
        android:id="@+id/phoneNumberEntered"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColorHint="#fff"
        android:textColor="#fff"
        android:drawablePadding="15dp"
        android:hint=" Enter Your Phone Number"
        android:textSize="20dp"
        android:textAlignment="center"
        android:background="@color/transparent"
        android:inputType="phone"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/sendCodeButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Send Code"
        android:textSize="16dp"
        android:textColor="#fff"
        android:backgroundTint="@color/transparent"
        android:layout_marginBottom="45dp"
        android:layout_above="@+id/verificationCode"
        android:layout_alignStart="@+id/verifyButton" />

    <EditText
        android:id="@+id/verificationCode"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="@color/transparent"
        android:hint="Enter Verification Code"
        android:textSize="20dp"
        android:textColorHint="#ffff"
        android:textColor="#ffff"
        android:inputType="number"
        android:textAlignment="center"
        android:layout_marginBottom="42dp"
        android:layout_above="@+id/verifyButton"
        android:layout_alignStart="@+id/phoneNumberEntered" />

    <Button
        android:id="@+id/verifyButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Verify"
        android:backgroundTint="@color/transparent"
        android:textColor="#fff"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="41dp"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rythmix"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:textColor="#fff"
        android:textSize="100dp"
        android:layout_above="@+id/phoneNumberEntered"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="77dp"
        android:alpha="0.6"/>


</RelativeLayout>