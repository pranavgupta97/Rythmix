<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pranav.karaoke.userProfileActivity"
    android:background="@drawable/gradient_background"
    android:padding="0dp">


    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_x="151dp"
        android:layout_y="122dp"
        android:background="@color/transparent"
        android:text="(logout)"
        android:textColor="#fff"
        android:layout_alignBottom="@+id/imageView15"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@mipmap/mics"
        android:alpha="0.4"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:id="@+id/signUpUserNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.02"
        android:layout_x="0dp"
        android:layout_y="248dp"
        android:background="@color/transparent"
        android:drawablePadding="12dp"
        android:drawableStart="@drawable/ic_mic_none_white_24dp"
        android:ems="10"
        android:hint="  User Name"
        android:inputType="textPersonName"
        android:paddingBottom="15dp"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:paddingTop="17dp"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:textSize="18sp"
        android:layout_below="@+id/signUpFullNameEditText"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="350dp"
        android:layout_y="0dp"
        android:background="@color/transparent"
        app:srcCompat="@android:drawable/ic_menu_edit"
        android:layout_marginTop="33dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/fabNewSession" />

    <TextView
        android:id="@+id/signUpEmailEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.02"
        android:layout_x="0dp"
        android:layout_y="305dp"
        android:background="@color/transparent"
        android:drawablePadding="12dp"
        android:drawableStart="@drawable/ic_phone_white_24dp"
        android:ems="10"
        android:hint="Phone Number"
        android:inputType="textPhonetic"
        android:paddingBottom="15dp"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:paddingTop="17dp"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:textSize="18sp"
        android:layout_below="@+id/signUpUserNameEditText"
        android:layout_alignParentStart="true" />

    <TextView

        android:id="@+id/signUpFullNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.03"
        android:layout_x="0dp"
        android:layout_y="191dp"
        android:background="@color/transparent"
        android:drawablePadding="12dp"
        android:drawableStart="@drawable/ic_person_outline_white_24dp"
        android:ems="10"
        android:hint="  Full Name"
        android:inputType="textPersonName"
        android:paddingBottom="15dp"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:paddingTop="17dp"
        android:textColor="#9effffff"
        android:textColorHint="#fff"
        android:textSize="18sp"
        android:layout_marginTop="191dp"
        android:layout_below="@+id/imageButton"
        android:layout_alignParentStart="true" />




    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabNewSession"
        android:layout_width="52dp"
        android:layout_height="51dp"
        android:layout_gravity="bottom|end"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_x="326dp"
        android:layout_y="507dp"
        app:srcCompat="@mipmap/mic_logo"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="27dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/ic_person_24dp"
        android:layout_marginBottom="119dp"
        android:layout_above="@+id/signUpUserNameEditText"
        android:layout_alignParentStart="true" />


    <Button
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(Edit Profile)"
        android:textColor="#fff"
        android:textSize="11sp"
        android:background="@color/transparent"
        android:layout_marginTop="15dp"
        android:layout_alignTop="@+id/imageButton"
        android:layout_alignParentEnd="true" />

</RelativeLayout>