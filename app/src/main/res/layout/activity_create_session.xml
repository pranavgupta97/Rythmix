<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context="com.example.pranav.karaoke.createSessionActivity">

    <TextView
        android:id="@+id/activityHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:text="@string/newSession"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:layout_marginTop="92dp" />

    <EditText
        android:id="@+id/sessionName"
        android:layout_width="300dp"
        android:background="#50aaaaaa"
        android:textColorHint="#ffff"
        android:textColor="#ffff"
        android:inputType="text"
        android:layout_height="wrap_content"
        android:layout_marginBottom="53dp"
        android:hint="@string/sessionName"
        android:textAlignment="center"
        android:layout_above="@+id/modeSpinner"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:id="@+id/modeSpinner"
        android:layout_width="300dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginBottom="84dp"
        android:layout_above="@+id/sessionFab"
        android:layout_alignStart="@+id/sessionName" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/sessionFab"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="91dp"
        android:backgroundTint="@color/colorPrimary"
        app:rippleColor="@color/white"
        android:src="@drawable/ic_arrow_forward_white_24dp"
       />

</RelativeLayout>
