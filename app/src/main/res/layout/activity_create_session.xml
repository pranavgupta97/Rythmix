<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:theme="@android:style/Theme.Holo.Dialog"
    tools:context="com.example.pranav.karaoke.createSessionActivity">

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@mipmap/disco"
        android:alpha="0.4"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:id="@+id/activityHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="58dp"
        android:fontFamily="@font/quicksand_light"
        android:gravity="center"
        android:text="Create Session"
        android:textColor="@color/white"
        android:textSize="60dp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/sessionName"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/modeSpinner"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="92dp"
        android:autoText="false"
        android:fontFamily="@font/quicksand_light"
        android:hint="@string/sessionName"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="#ffff"
        android:textColorHint="#ffff" />

    <Spinner
        android:id="@+id/modeSpinner"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/themeSpinner"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="62dp"
        android:backgroundTint="@color/white"
        android:fadingEdge="none|horizontal|vertical"
        android:fontFamily="@font/quicksand_light"
        android:gravity="center"
        android:textColor="#ffff"
        android:textColorHint="#ffff" />

    <Spinner
        android:id="@+id/themeSpinner"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sessionFab"
        android:layout_alignStart="@+id/modeSpinner"
        android:layout_marginBottom="42dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/quicksand_light"
        android:gravity="center"
        android:textColor="#ffff"
        android:textColorHint="#ffff" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/sessionFab"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="120dp"
        android:background="@drawable/gradient_background"
        android:backgroundTint="@color/transparent"
        android:fadingEdge="none"
        android:focusableInTouchMode="true"
        android:focusedByDefault="false"
        android:src="@drawable/ic_arrow_forward_white_24dp"
        app:backgroundTint="@color/scrollbar"
        app:borderWidth="3dp"
        app:rippleColor="@color/white" />

</RelativeLayout>